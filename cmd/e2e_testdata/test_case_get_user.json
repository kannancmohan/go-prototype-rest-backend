[
    {
        "name": "Get User: Valid user id",
        "request": {
            "method": "GET",
            "path": "/api/v1/users/1"
        },
        "expected": {
            "status": 200,
            "body": {
                "username": "test_user1",
                "email": "test_user1_updated@test.com"
            }
        }
    },
    {
        "name": "Get User: Invalid user id",
        "request": {
            "method": "GET",
            "path": "/api/v1/users/invalid_id"
        },
        "expected": {
            "status": 400,
            "error": {
                "error": "invalid request"
            }
        }
    },
    {
        "name": "Get User: Missing user id",
        "request": {
            "method": "GET",
            "path": "/api/v1/users/9999999999999"
        },
        "expected": {
            "status": 404,
            "error": {
                "error": "find failed"
            }
        }
    }
]